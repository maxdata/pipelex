    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pipelex",
            "args": [
                "--help",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug test_pipe_ocr_pdf",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
                "-m ocr",
                "-k test_pipe_ocr_pdf"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Validate Pipe",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pipelex",
            "args": [
                "validate",
                "pipe",
                "describe_image",
                "-c",
                "pipelex/libraries",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}